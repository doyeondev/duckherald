# PostgreSQL for Directus
DB_CLIENT=pg
DB_HOST=host.docker.internal
DB_PORT=5432
DB_DATABASE=postgres
DB_USER=postgres
DB_USERNAME=your_username
DB_PASSWORD=your_password
DB_URL=jdbc:postgresql://localhost:5432/postgres

# Directus API 정보
DIRECTUS_API_URL=http://localhost:8055
DIRECTUS_API_TOKEN=your_directus_api_token

# Directus 관리자 계정
DIRECTUS_ADMIN_EMAIL=admin@example.com
DIRECTUS_ADMIN_PASSWORD=your_secure_password

CORS_ENABLED=true
CORS_ORIGIN=http://localhost:3000

# 필수 설정
MAIL_USERNAME=your_email@example.com
MAIL_PASSWORD=your_email_password

# 데이터베이스 설정 (필요한 경우 수정)
# DB_URL은 위에서 이미 정의되어 있으므로 제거
# DB_URL=jdbc:postgresql://localhost:5432/postgres
# DB_USERNAME과 DB_PASSWORD도 위에서 정의됨

# 기타 설정은 기본값 사용

CLOUDFLARE_R2_ACCESS_KEY=your_access_key
CLOUDFLARE_R2_SECRET_KEY=your_secret_key
CLOUDFLARE_R2_ACCOUNT_ID=your_account_id
CLOUDFLARE_R2_ENDPOINT=https://your_account_id.r2.cloudflarestorage.com
CLOUDFLARE_R2_BUCKET=your-bucket-name
CLOUDFLARE_R2_CUSTOM_DOMAIN=https://img.example.com

SENTRY_DSN_BACKEND=your_sentry_dsn
SENTRY_AUTH_TOKEN_BACKEND=your_sentry_auth_token

# JWT 시크릿 키 (특수문자가 없는 안전한 형태로 변경)
JWT_SECRET_KEY=your_secure_jwt_secret_key